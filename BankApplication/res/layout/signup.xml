<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6699cc" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="#003366"
    >
     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
       android:textColor="#ffffff"
       android:layout_marginTop="10dp"
    
    android:layout_marginBottom="10dp"    
           android:textSize="26sp"
        android:text="SignUp" />
    
    
</LinearLayout>
   

    <EditText
        android:id="@+id/signuserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:hint="UserNmae"
        android:gravity="center"
        android:inputType="textPersonName"
        android:background="@drawable/broderframe" >

    </EditText>
    <EditText
        android:id="@+id/signup_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:hint="Password"
        android:gravity="center"
        android:background="@drawable/broderframe"
        android:inputType="textPassword" >

    </EditText>
       <EditText
        android:id="@+id/signup_CnfPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:hint="ConformPassword"
        android:gravity="center"
        android:background="@drawable/broderframe"
        android:inputType="textPassword" >

    </EditText>
      <EditText
        android:id="@+id/transaction_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:hint="TransactionPassword"
        android:gravity="center"
        android:inputType="textPassword"
        android:background="@drawable/broderframe" >

    </EditText>

      <Button
          android:id="@+id/button1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:layout_gravity="center"
          android:text="@string/submit"
          android:textColor="#ffffff"
          android:background="@drawable/button_bl" />

</LinearLayout>
